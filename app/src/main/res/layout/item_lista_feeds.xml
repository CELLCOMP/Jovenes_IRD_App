<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="7dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/more_icon"
            android:background="#00000000"
            android:layout_margin="5dp"
            android:id="@+id/menu_publicacion"
            android:padding="5dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:id="@+id/titulo_publicacion"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/publicacion_icon"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/separador"
        android:layout_marginRight="5dp"
        android:background="#9FA8DA"
        android:layout_below="@+id/titulo_publicacion"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/separador"
            android:src="@drawable/picture"
            android:id="@+id/imagen_publicacion"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/separador2"
            android:layout_marginRight="5dp"
            android:background="#9FA8DA"
            android:layout_below="@+id/imagen_publicacion"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mensaje_example"
            android:textColor="@color/colorPrimaryText"
            android:layout_below="@id/imagen_publicacion"
            android:id="@+id/comentario_publicacion"
            android:layout_margin="5dp"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20181211"
            android:textColor="#555353"
            android:layout_below="@+id/comentario_publicacion"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/tiempo_publicacion_icon"
            android:drawablePadding="5dp"
            android:textSize="15sp"
            android:id="@+id/tiempo_publicacion"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>